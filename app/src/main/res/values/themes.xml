<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyCycle" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/icon_background</item>
    </style>

    <style name="CalendarViewMyCycle" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/activity_background</item>
        <item name="android:textColorPrimary">@color/mycycle_text</item>
        <item name="fontFamily">@font/tenor_sans</item>
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="android:background">@color/board</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="CalendarWeekText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/icon_background</item>
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="fontFamily">@font/tenor_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarMonthText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/mycycle_text</item>
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="fontFamily">@font/tenor_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarViewDate" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/selectedday</item>
        <item name="android:fontFamily">@font/tenor_sans</item>
        <item name="fontFamily">@font/tenor_sans</item>
    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="mySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">
            @color/mycycle_text
        </item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/icon_background
        </item>
        <item name="strokeColor">@color/icon_background</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/icon_background
        </item>
    </style>
    <style name="Theme.MyCycle" parent="Base.Theme.MyCycle" />
</resources>